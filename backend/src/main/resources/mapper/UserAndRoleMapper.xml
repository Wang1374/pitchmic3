<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.dao.UserAndRoleDao">
    <resultMap id="result" type="com.example.demo.entity.UserAndRole">
        <id column="id" property="id"/>
        <result column="role_id" property="roleId"/>
        <result column="user_id" property="userId"/>
    </resultMap>
    <insert id="userAddRole">
        insert into user_and_role
        (user_id, role_id)
        values
        (#{userAndRole.userId}, #{userAndRole.roleId})
    </insert>
    <delete id="removeUserAndRole">
        delete from user_and_role where role_id = #{userAndRole.roleId} and user_id = #{userAndRole.userId};
    </delete>
    <delete id="removeByUserId">
        delete from user_and_role where user_id = #{userId};
    </delete>
    <select id="getUserAndRole" resultMap="result">
        select * from user_and_role where user_id = #{userId} and role_id = #{roleId};
    </select>
</mapper>